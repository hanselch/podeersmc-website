---
import './global.css'
import '@fontsource/zen-dots'
import '@fontsource/ibm-plex-sans'

import NavBar from './components/NavigationBar.astro'
import ImageBack from './components/image-back.astro'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/pondeer_icon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>PondeersMC | Server Map</title>
	</head>
	<body>

    <NavBar />
    <ImageBack image="/images/image-background/server-map-bg.png" altext="main mc back" title="The Server Map" />

    <div class="map">
      <iframe src="http://37.10.122.49:8100/" style="border: 1px solid black;"></iframe>
    </div>

    <div class="main">
      <span style="font-size: 10px">Map made with <a href="https://bluemap.bluecolored.de/" target="_blank">BlueMap</a>, Copyright (c) <a href="https://bluecolored.de" target="_blank">Blue</a> under MIT License.</span>
      <h3>Note</h3>
      <p>
      If you are experiencing lag on the map itself, <b>it is required to enable Hardware Acceleration on your broswer settings</b>. Notify Hansel (tardio) for info :)
      </p>
      <hr>
      <h2>Request your location be set on the map!</h2>
      <form method="post" data-netlify="true" name="requestLocation">
        <p><span style="color: red">*</span> Required</p>
        <label>Minecraft IGN<span style="color: red">*</span>: <input type="text" name="mc-ign" required></label><br>
        <label>Location coords (x, z)<span style="color: red">*</span>: <input type="text" name="coords" required></label><br>
        <label>Name of location you prefer: <input type="text" name="preferredName"></label><br>
        <button type="submit" id="submit_button">Submit!</button>
      </form>
    </div>
<script src="/scripts/serverMapJs.js" is:inline></script>
<style>
  .form {
    font-size: 20px;
    padding: 10px;
  }
  .form select {
    padding: 8px;
  }
  #showMap {
    font-size: 18px;
    padding: 7px 15px;
    border: none;
    background: #F7567C;
  }
  #showMap:hover {
    background: #F52958; 
    cursor: pointer;
  }

  .map {
    max-width: 1100px;
    margin: 0 auto;
    padding: 10px;
  }
  .map iframe {
    width: 100%;
    height: 80vh
  }
  button#submit_button {
    font-size: 14px;
    background-color: #99E1D9;
    border-width: 0;
    padding: 10px;
  }
  button#submit_button:hover{
    background-color: #51CDBE;
    cursor: pointer;
  }
</style>

	</body>
</html>
